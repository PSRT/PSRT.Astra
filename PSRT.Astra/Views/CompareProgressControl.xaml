<UserControl x:Class="PSRT.Astra.Views.CompareProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSRT.Astra.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ProgressBar
        Height="24"
        Margin="4"
        Maximum="1"
        IsIndeterminate="{Binding
            Path=IsIndeterminate,
            RelativeSource={RelativeSource AncestorType={x:Type local:CompareProgressControl}}
        }"
        Value="{Binding
            Path=Progress,
            RelativeSource={RelativeSource AncestorType={x:Type local:CompareProgressControl}}
        }"/>
</UserControl>
